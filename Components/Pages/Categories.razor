@page "/categories"
@using MoneyManager.Models
@using MoneyManager.Services
@inject ICategoryService categoryService
@inject NavigationManager NavigationManager

<style>
    .table {
        background-color: #ffe6f0 !important; /* Light pink background for the table */
        border-collapse: collapse;
        width: 100%;
    }

        /* Table Header Styling */
        .table th {
            background-color: #ff69b4 !important; /* Pink background for table header */
            color: white;
        }

    /* Table Row Styling */
    .table-striped tbody tr:nth-child(odd) {
        background-color: #ffe6f0 !important; /* Light pink for odd rows */
    }

    .table-striped tbody tr:nth-child(even) {
        background-color: #ffccf2 !important; /* Slightly darker pink for even rows */
    }

    /* Table Data Styling */
    .table td {
        padding: 10px;
        text-align: left;
    }

    /* Button Styling */
    .btn-danger {
        background-color: #ff4d94 !important; /* Darker pink for delete button */
        border-color: #ff4d94 !important;
    }

        .btn-danger:hover {
            background-color: #ff3385 !important; /* Even darker pink on hover */
            border-color: #ff3385 !important;
        }
</style>
<h3>Categories List</h3>


<div>
    <button @onclick="NavigatetoAddCategory">Add Category</button>
</div>

<div class="container mt-5">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th style="width: 80%">Category Name</th>
                    <th style="width: 20%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (categories.Any())
                {
                    @foreach (var category in categories)
                    {
                        <tr>
                            <td>@category.Name</td>
                            <td>
                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteCategory(category.CategoryId)">
                                    Delete
                                </button>  <!-- Add any action buttons) -->
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center">No categories available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<Category> categories = new List<Category>();

    protected override async Task OnInitializedAsync()
    {
        categories = await categoryService.LoadCategoriesAsync();
    }


    private async Task DeleteCategory(Guid categoryId)
    {
        try
        {
            var categoryToDelete = categories.FirstOrDefault(c => c.CategoryId == categoryId);
            if (categoryToDelete != null)
            {
                categories.Remove(categoryToDelete);
                await categoryService.SaveCategoriesAsync(categories);
                categories = await categoryService.LoadCategoriesAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting category: {ex.Message}");
        }
    }
    private void NavigatetoAddCategory()
    {
        NavigationManager.NavigateTo("add-category");
    }
}
